{
    "manifest_version": 2,
    "name": "LuponMedia site checker",
    "description": "Check your site for errors in ads delivery",
    "version": "0.1",
    "author": "adnan.supic@luponmedia.com",
    "background": {
        "page": "./backgroundPage/background.html",
        "persistent": false
    },
    "browser_action": {
        "default_popup": "./popupPage/popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content/jquery-3.3.1.js",
                "/content/eventFunctions.js",
                "/content/content.js"
            ],
            "css": [
                "/content/content.css"
            ]
        }
    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "options_page": "./optionsPage/options.html",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs",
        "accessibilityFeatures.read"
    ]
}